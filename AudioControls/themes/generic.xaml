<ResourceDictionary 
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="clr-namespace:AudioControls"
	>
    
	<Style TargetType="local:FileCutterControl">
        <Setter Property="Height" Value="100" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate>
					<Canvas x:Name="RootCanvas" Height="{TemplateBinding Height}">
                        <Rectangle x:Name="CroppingMask" Width="300" Height="{TemplateBinding Height}" 
                                   Fill="{StaticResource PhoneAccentBrush}" Opacity=".4" />
						<ContentPresenter />
					</Canvas>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

</ResourceDictionary>